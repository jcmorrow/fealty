#!/usr/bin/env ruby

$: << File.expand_path("../../lib/", __FILE__)

require "awesome_print"
require "byebug"
require "cards"
require "player"
require "priority"
require "strategy"
require "strategy_generator"
require "strategy_generation"

first_generation = StrategyGeneration.new
best_candidate = first_generation.evolve[0]

puts <<-DOC

Buy Strategy
============
#{best_candidate.buy_priorities.map(&:to_sym)}
DOC

puts <<-DOC

Play Strategy
============
#{best_candidate.play_priorities.map(&:to_sym)}
DOC

1_000.times.with_index do |index|
  generation = StrategyGeneration.from_strategy(best_candidate)
  result = generation.evolve
  # print [index.to_s, result[1].to_s].join(", ") + "\n"
  # print result[1].to_s + " "
  best_candidate = result[0]
end

puts <<-DOC

Buy Strategy
============
#{best_candidate.buy_priorities.map(&:to_sym)}
DOC

puts <<-DOC

Play Strategy
============
#{best_candidate.play_priorities.map(&:to_sym)}
DOC
